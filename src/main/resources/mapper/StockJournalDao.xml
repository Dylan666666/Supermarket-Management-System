<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.scms.dao.StockJournalDao">
    <select id="queryStockJournalById" resultType="com.market.scms.entity.StockJournal">
        SELECT 
        *
        FROM 
        tb_stock_journal
        WHERE 
        stock_journal_id = #{stockJournalId}
    </select>

    <select id="queryStockJournalList" resultType="com.market.scms.entity.StockJournal">
        SELECT
        *
        FROM 
        tb_stock_journal
    </select>

    <select id="queryStockJournalListByCondition" resultType="com.market.scms.entity.StockJournal">
        SELECT
        *
        FROM
        tb_stock_journal s
        <where>
            <if test="stockJournalCondition.stockJournalId != null">
                AND
                s.stock_journal_id = #{stockJournalCondition.stockJournalId}
            </if>
            <if test="stockJournalCondition.stockJournalGoodsId != null">
                AND
                s.stock_journal_goods_id = #{stockJournalCondition.stockJournalGoodsId}
            </if>
            <if test="stockJournalCondition.stockJournalGodownEntryId != null">
                AND
                s.stock_journal_godown_entry_id = #{stockJournalCondition.stockJournalGodownEntryId}
            </if>
        </where>
        ORDER BY s.stock_journal_date DESC 
        LIMIT #{rowIndex},#{pageSize}
    </select>
    
    <insert id="insertStockJournal" parameterType="com.market.scms.entity.StockJournal"
            useGeneratedKeys="true" keyProperty="stockJournalId" keyColumn="stock_journal_id">
        INSERT INTO
        tb_stock_journal(stock_journal_goods_id,stock_journal_godown_entry_id,stock_journal_date,
        stock_journal_goods_price,stock_journal_paid,stock_journal_num,stock_journal_supplier_id)
        VALUES 
        (#{stockJournalGoodsId},#{stockJournalGodownEntryId},#{stockJournalDate},
        #{stockJournalGoodsPrice},#{stockJournalPaid},#{stockJournalNum},#{stockJournalSupplierId})
    </insert>
    
</mapper>