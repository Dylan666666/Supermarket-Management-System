<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.scms.dao.OrderFormDao">
    <select id="queryFormById" resultType="com.market.scms.entity.OrderForm">
        SELECT 
        *
        FROM 
        tb_order_form
        WHERE 
        order_id = #{orderId}
    </select>

    <select id="queryFormByCondition" resultType="com.market.scms.entity.OrderForm">
        SELECT
        *
        FROM
        tb_order_form s
        <where>
            <if test="orderFormCondition.orderId != null">
                AND
                s.order_id = #{orderFormCondition.orderId}
            </if>
            <if test="orderFormCondition.goodsCategory != null">
                AND
                s.goods_category = #{orderFormCondition.goodsCategory}
            </if>
            <if test="orderFormCondition.goodsName != null">
                AND
                s.goods_name = #{orderFormCondition.goodsName}
            </if>
            <if test="orderFormCondition.orderStatus != null">
                AND
                s.order_status = #{orderFormCondition.orderStatus}
            </if>
        </where>
        ORDER BY order_id ASC
        LIMIT #{rowIndex},#{pageSize}
    </select>

    <insert id="insertOrderForm" parameterType="com.market.scms.entity.OrderForm"
            useGeneratedKeys="true" keyProperty="orderId" keyColumn="order_id">
        INSERT INTO
        tb_order_form(goods_name,goods_category,goods_num,order_status,order_time)
        VALUES 
        (#{goodsName},#{goodsCategory},#{goodsNum},#{orderStatus},#{orderTime})
    </insert>

    <update id="updateOrderForm" parameterType="com.market.scms.entity.OrderForm">
        UPDATE
        tb_order_form
        <set>
            <if test="goodsName != null"> goods_name = #{goodsName},</if>
            <if test="goodsCategory != null"> goods_category = #{goodsCategory},</if>
            <if test="goodsNum != null"> goods_num = #{goodsNum},</if>
            <if test="orderStatus != null"> order_status = #{orderStatus}</if>
        </set>
        WHERE
        order_id = #{orderId}
    </update>

</mapper>