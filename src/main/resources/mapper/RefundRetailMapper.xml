<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.scms.mapper.RefundRetailMapper">

    <insert id="insert" parameterType="com.market.scms.entity.RefundRetail">
        INSERT INTO
        tb_refund_retail(refund_retail_id,retial_stock_goods_id,
        refund_customer_id,retail_num,retail_price)
        VALUES 
        (#{refundRetailId},#{retialStockGoodsId},
        #{refundCustomerId},#{retailNum},#{retailPrice})
    </insert>

    <update id="update" parameterType="com.market.scms.entity.RefundRetail">
        UPDATE
        tb_refund_retail
        <set>
            <if test="retailNum != null"> retail_num = #{retailNum},</if>
            <if test="retailPrice != null"> retail_price = #{retailPrice}</if>
        </set>
        WHERE
        refund_retail_id = #{refundRetailId}
        AND
        retial_stock_goods_id = #{retial_stock_goods_id}
        AND
        refund_customer_id = #{refundCustomerId}
    </update>

    <select id="queryByRefundRetailId" resultType="com.market.scms.entity.RefundRetail">
        SELECT 
        *
        FROM 
        tb_refund_retail
        WHERE 
        refund_retail_id = #{refundRetailId}
    </select>

    <select id="queryByStockGoodsId" resultType="com.market.scms.entity.RefundRetail">
        SELECT 
        *
        FROM 
        tb_refund_retail
        WHERE 
        retial_stock_goods_id = #{retial_stock_goods_id}
    </select>

    <select id="queryByRefundCustomerId" resultType="com.market.scms.entity.RefundRetail">
        SELECT 
        *
        FROM 
        tb_refund_retail
        WHERE 
        refund_customer_id = #{refundCustomerId}
    </select>

    <select id="queryByTribeId" resultType="com.market.scms.entity.RefundRetail">
        SELECT 
        *
        FROM 
        tb_refund_retail
        WHERE 
        refund_retail_id = #{refundRetailId}
        AND
        retial_stock_goods_id = #{retial_stock_goods_id}
        AND
        refund_customer_id = #{refundCustomerId}
    </select>

    <select id="queryAll" resultType="com.market.scms.entity.RefundRetail">
        SELECT 
        *
        FROM 
        tb_refund_retail
        ORDER BY refund_customer_id DESC 
        LIMIT #{rowIndex},#{pageSize}
    </select>

</mapper>