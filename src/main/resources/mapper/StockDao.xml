<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.scms.dao.StockDao">
    <select id="queryStockById" resultType="com.market.scms.entity.Stock">
        SELECT 
        *
        FROM 
        tb_stock
        WHERE 
        stock_id = #{stockId}
    </select>

    <select id="queryStockByGoodsId" resultType="com.market.scms.entity.Stock">
        SELECT
        *
        FROM 
        tb_stock
        WHERE 
        stock_goods_id = #{stockGoodsId}
    </select>

    <insert id="insertStock" parameterType="com.market.scms.entity.Stock"
            useGeneratedKeys="true" keyProperty="stockId" keyColumn="stock_id">
        INSERT INTO
        tb_stock(stock_goods_id,stock_goods_num)
        VALUES 
        (#{stockGoodsId},#{stockGoodsNum})
    </insert>

    <update id="updateStock" parameterType="com.market.scms.entity.Stock">
        UPDATE
        tb_stock
        SET 
        stock_goods_num = #{stockGoodsNum}
        WHERE
        stock_id = #{stockId}
    </update>
</mapper>