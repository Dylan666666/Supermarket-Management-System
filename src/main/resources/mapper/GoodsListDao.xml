<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.scms.dao.GoodsListDao">
    <select id="queryGoodsById" resultType="com.market.scms.entity.GoodsList">
        SELECT 
        *
        FROM 
        tb_goods_list
        WHERE 
        goods_id = #{goodsId}
    </select>

    <select id="queryGoodsByOrderId" resultType="com.market.scms.entity.GoodsList">
        SELECT
        *
        FROM 
        tb_goods_list
        WHERE 
        goods_order_id = #{goodsOrderId}
        ORDER BY goods_id ASC
        LIMIT #{rowIndex},#{pageSize}
    </select>

    <insert id="insertGoods" parameterType="com.market.scms.entity.GoodsList"
            useGeneratedKeys="true" keyProperty="goodsId" keyColumn="goods_id">
        INSERT INTO
        tb_goods_list(goods_name,goods_category,date_Manufacture,shelf_life,goods_price,goods_order_id)
        VALUES 
        (#{goodsName},#{goodsCategory},#{dateManufacture},#{shelfLife},#{goodsPrice},#{goodsOrderId})
    </insert>

    <update id="updateGoods" parameterType="com.market.scms.entity.GoodsList">
        UPDATE
        tb_goods_list
        <set>
            <if test="goodsName != null"> goods_name = #{goodsName},</if>
            <if test="goodsCategory != null"> goods_category = #{goodsCategory},</if>
            <if test="dateManufacture != null"> date_Manufacture = #{dateManufacture},</if>
            <if test="shelfLife != null"> shelf_life = #{shelfLife},</if>
            <if test="goodsPrice != null"> goods_price = #{goodsPrice}</if>
        </set>
        WHERE
        goods_id = #{goodsId}
    </update>

</mapper>